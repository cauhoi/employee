<h1>Employees List: total (<%=@count %>)</h1>
 <h3><%= link_to 'Add New Employee', new_employee_path %></h3>
<table class="table">
  <tr>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Gender</th>
    <th>Birthday</th>
    <th>Hire Date</th>
    <th>Title</th>
    <th>Actions</th>
  </tr>
 
  <% @employees.each do |employee| %>
    <tr>
      <td><%= employee.first_name %></td>
      <td><%= employee.last_name %></td>
      <td><%= employee.gender %></td>
      <td><%= employee.birth_date %></td>
      <td><%= employee.hire_date %></td>
      <td><%= employee.titles.first.title %></td>
      <td><%= link_to 'Show', employee_path(employee) %></td>
    </tr>
  <% end %>
</table>
<%= will_paginate @employees %>